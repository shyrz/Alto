<nav class="pagination container large">
	<div class="pagination-left">
		{{#if prev}}
			<a class="newer-posts button-arrow button-arrow-left" href="{{page_url prev}}">
				<i class="button-arrow-icon icon icon-left-arrow"></i> {{t "Newer Posts"}}
			</a>
		{{/if}}
	</div>
	<span class="page-number hidden-xs hidden-sm">
		{{!-- {{plural page empty=(t "Page %") singular=(t "Page %") plural=(t "Page %")}}
		{{plural pages empty=(t "of %") singular=(t "of %") plural=(t "of %")}} --}}
		{{t "Page {page} of {pages}" page=page pages=pages}}
	</span>
	<div class="pagination-right">
		{{#if next}}
			<a class="older-posts button-arrow button-arrow-right" href="{{page_url next}}">
				{{t "Older Posts"}} <i class="button-arrow-icon icon icon-right-arrow"></i>
			</a>
		{{/if}}
	</div>
</nav>
