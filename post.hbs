{{!< default}}

<div class="content-area">
  <main class="site-main">
    {{#post}}
      <article class="{{post_class}}{{#unless feature_image}} no-image{{/unless}} single-post{{#if og_description}} js-play{{/if}}">
        {{> post-header single=true big_title=true}}
        {{#if feature_image}}
          {{> post-media ratio="horizontal"}}
        {{/if}}
        
        <div class="post-content kg-canvas u-text-format">
          {{content}}
        </div>
        <div class="container medium">
          {{> share}}
          {{> author}}
        </div>
      </article>
      {{> post-navigation}}
      {{> related}}
      {{> comment}}
      {{> scrolltop}}
    {{/post}}
  </main>
</div>
